{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "installCommand": "npm install && composer install",
      "buildCommand": "npm run build && php artisan config:clear",
      "startCommand": "php artisan serve --host 0.0.0.0 --port {{.PORT}}"
    }
  },
  "deploy": {
    "startCommand": "php artisan serve --host 0.0.0.0 --port {{.PORT}}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 120
  }
}